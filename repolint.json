{
  "extends": "https://raw.githubusercontent.com/quic/.github/main/repolint.json",
  "rules": {
    "source-license-headers-exist": {
      "level": "error",
      "rule": {
        "type": "file-starts-with",
        "options": {
          "globsAll": [
            "**/*.py",
            "**/*.js",
            "**/*.c",
            "**/*.cc",
            "**/*.cpp",
            "**/*.h",
            "**/*.ts",
            "**/*.sh",
            "**/*.rs"
          ],
          "skip-paths-matching": {
            "patterns": [
              "aimet_tensorflow\/graph_editor\/",
              "aimet_tensorflow\/quantize\/"
            ]
          },
          "lineCount": 40,
          "patterns": [
            "Copyright.*Qualcomm Innovation Center, Inc|(c).*Qualcomm Innovation Center, Inc",
            "SPDX-License-Identifier"
          ],
          "flags": "i"
        }
      }
    }
  }
}
